@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}
else
{
  <table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  @foreach (Engineer engineer in Model)
    {
      <tr>
        <td>
          @Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })
        </td>
        <td>
          @if (engineer.isBusy == false)
          {
            <div class="idle">Idle</div>
          }
          else
          {
            <div class="busy">Busy</div>
          }
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id = engineer.EngineerId })
          @Html.ActionLink("Delete", "Delete", new { id = engineer.EngineerId })
        </td>
      </tr>
      @* <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })
  </li> *@
    }
  </table>
}

<p>@Html.ActionLink("Add new engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
